{
  "plugins": [
    "react",
    "react-redux",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-redux/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "no-console": "off",
    "quotes": [
      2,
      "single"
    ],
    "import/named": 2,
    "react/jsx-no-undef": 1,
    "react/prop-types": "off",
    "no-case-declarations": "off",
    "no-var": "error",
    "react-redux/mapStateToProps-no-store": "off",
    "react-redux/prefer-separate-component-file": "off",
    "eol-last": [
      "error",
      "always"
    ],
    "no-trailing-spaces": "error",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "react/jsx-no-bind": [
      2,
      {
        "allowArrowFunctions": true
      }
    ]
  }
}